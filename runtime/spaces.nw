boolean
inject_search_space(SearchSpace *space)
{
    /* fail if current space is not a root space */
    if ( ss == 0 || ss->parent )
	return false;

    /* otherwise re-parent the current space */
    ss->root   = space->root;
    ss->parent = space;

    /* activate the parent's bindings and succeed */
    switch_bindings(space);
    return true;
}

