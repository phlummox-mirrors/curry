<<spaces.c>>=
void
resume_search_space(SearchSpace *space)
{
    unsigned int i, n;
    ScriptRec	 *script;

    assert(space != 0);

    /* change the current search space and activate its bindings */
    ss = space;
    switch_bindings(ss);

    /* restore the trail */
    if ( ss->script )
    {
	n = vector_argc(ss->script) / wordsof(ScriptRec);
	CHECK_TRAIL(n);

	script     = ss->script->data;
	ss->script = 0;
	for ( i = 0; i < n; i++ )
	{
	    tp->addr = script->addr;
	    tp->info = script->outInfo;
	    tp->ofs  = script->ofs;
	    tp->val  = script->outVal;
	    tp++;
	    script++;
	}
    }
}

