#!@CYI_SHELL@
# @configure_input@

# Call cyi in build directory
srcdir=@srcdir@
builddir=`dirname $0`

# convert build directory into an absolute path so that :cd can be used
case "$builddir" in
  /* ) ;;
  * )
    while :; do
      case "$builddir" in
        ./* ) builddir=`expr "$builddir" : '\./\(.*\)'`;;
        . ) builddir=`pwd`; break;;
	* ) builddir=`pwd`/"$builddir"; break;;
      esac
    done
esac

# convert src into an absolute path
case "$srcdir" in
  /* ) ;;
  * ) srcdir=$builddir/$srcdir
esac

: ${cymake=$builddir/cymake-inplace}
: ${cyc=$builddir/cyc-inplace}
: ${CURRY_PATH=$builddir}
: ${CURRY_IMPORT_PATH=$CURRY_PATH/curry}
: ${CURRY_INCLUDE_PATH=$builddir/runtime:$srcdir/runtime}
: ${CURRY_LIBRARY_PATH=$builddir/curry}
export CURRY_PATH CURRY_IMPORT_PATH CURRY_INCLUDE_PATH CURRY_LIBRARY_PATH

. $builddir/cyi
