#!/bin/sh
# @configure_input@

# Call cymk in build directory
srcdir=@srcdir@
builddir=`dirname $0`

case "$srcdir" in
  /* ) ;;
  * ) srcdir=$builddir/$srcdir
esac

: ${CYC=$builddir/cyc-inplace}
: ${CURRY_PATH=$builddir}
: ${CURRY_IMPORT_PATH=$CURRY_PATH/curry}
: ${CURRY_INCLUDE_PATH=$builddir/runtime:$srcdir/runtime}
: ${CURRY_LIBRARY_PATH=$builddir/curry}
export CYC CURRY_PATH CURRY_IMPORT_PATH CURRY_INCLUDE_PATH CURRY_LIBRARY_PATH

. $builddir/cymake
