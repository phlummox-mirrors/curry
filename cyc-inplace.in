#!/bin/sh
# @configure_input@

# Call cyc in build directory
srcdir=@srcdir@
builddir=`dirname $0`

case "$srcdir" in
  /* ) ;;
  * ) srcdir=$builddir/$srcdir
esac

: ${CURRY_PATH=$builddir}
: ${CURRY_IMPORT_PATH=$builddir/curry}
: ${CURRY_INCLUDE_PATH=$builddir/runtime:$srcdir/runtime}
: ${CURRY_LIBRARY_PATH=$builddir/curry}
export CURRY_PATH CURRY_IMPORT_PATH CURRY_INCLUDE_PATH CURRY_LIBRARY_PATH

. $builddir/cyc
